<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/confirmation_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please, confirm insertion"
        android:textSize="27sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/confirmation_dialog_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do you want to insert this game in to local DB?"
        android:layout_below="@id/confirmation_dialog_title"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/confirmation_dialog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:layout_below="@id/confirmation_dialog_text"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/confirmation_dialog_name_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="text"
        android:layout_below="@id/confirmation_dialog_text"
        android:textSize="15sp"
        android:layout_toRightOf="@id/confirmation_dialog_name"/>

    <TextView
        android:id="@+id/confirmation_dialog_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summary: "
        android:layout_below="@id/confirmation_dialog_name_content"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/confirmation_dialog_summary_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="text"
        android:layout_below="@id/confirmation_dialog_name_content"
        android:textSize="15sp"
        android:layout_toRightOf="@id/confirmation_dialog_summary"/>

</RelativeLayout>